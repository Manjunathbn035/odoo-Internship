<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_kabaddi_player_tree" model="ir.ui.view">
        <field name="name">kabaddi.player.tree</field>
        <field name="model">kabaddi.player</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="position"/>
                <field name="total_sessions"/>
            </tree>
        </field>
    </record>

    <record id="view_kabaddi_player_form" model="ir.ui.view">
        <field name="name">kabaddi.player.form</field>
        <field name="model">kabaddi.player</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="position"/>
                        </group>
                        <group>
                            <field name="weight"/>
                            <field name="height"/>
                            <field name="join_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Training Sessions">
                            <field name="session_ids" mode="tree,form">
                                <tree>
                                    <field name="date"/>
                                    <field name="duration"/>
                                    <field name="focus_area"/>
                                    <field name="performance_rating"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_kabaddi_root" name="Kabaddi Training"/>
    <menuitem id="menu_kabaddi_players" name="Players" parent="menu_kabaddi_root" action="action_kabaddi_player"/>
    
    <record id="action_kabaddi_player" model="ir.actions.act_window">
        <field name="name">Kabaddi Players</field>
        <field name="res_model">kabaddi.player</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>